<Pagination class="justify-content-center">
    <span class="paging-showing">
        Showing @(metadata.PageIndex > 1 ? (metadata.PageIndex -1) + metadata.PageSize : metadata.PageIndex ) 
        - @(metadata.PageSize * metadata.PageIndex) 
        of @metadata.TotalCount
    </span>
    @foreach (var link in _links)
    {
        <PaginationItem class=@($"{(link.Enabled ? "" : "disabled")} {(link.Active ? "active" : "")}")>
            <PaginationLink @onclick="() => OnSelectedPage(link)">
                @link.Text
            </PaginationLink>
        </PaginationItem>
    }
</Pagination>

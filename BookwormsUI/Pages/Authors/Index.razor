@page "/authors/"

@inject IAuthorRepository authorRepo
@inject AuthorService authorService
@inject NavigationManager navigationManager

@if (authors == null)
{
    <LoadingMessage Message="Loading authors..." />
}
else
{
    @if (authors.Count() < 1)
    {
        <h4>No authors currently listed</h4>
    }
    else
    {
        <div>
            <BreadcrumbHeader CurrentUrl=@CurrentUrl />
        </div>

        <h4>List of Authors</h4>

        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in authors)
                {
                    <tr>
                        <td>@author.FirstName</td>
                        <td>@author.LastName</td>
                        <td>
                            <a class="btn btn-primary" href="/authors/details/@author.Id" >
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private IEnumerable<Author> authors;
    private string CurrentUrl;

    protected override async Task OnInitializedAsync()
    {
        var url = authorService.GetAuthorsApiEndpoint();
        authors = await authorRepo.GetAsync(url);

        CurrentUrl = navigationManager.Uri;
    }
}
